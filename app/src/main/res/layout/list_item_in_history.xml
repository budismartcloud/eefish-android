<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="20dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/iv_ikan_i"
            android:backgroundTintMode="multiply"
            android:background="@drawable/circle_shape_accent2"
            android:src="@drawable/ic_delivered"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <LinearLayout
            android:id="@+id/layout_cart_i"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_history_onprogress_date"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent3"
                    android:text="Sunday, 3 Desember 2017"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_access_time_accent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_history_onprogress_time"
                    android:padding="5dp"
                    android:text="11.45 PM"
                    android:textColor="@color/colorAccent3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_location_on_accent6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_history_onprogress_address"
                    android:textColor="@color/colorAccent3"
                    android:padding="5dp"
                    android:maxHeight="50dp"
                    android:text="Jl.Hidrodinamika No 24 Surabaya ... "
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>