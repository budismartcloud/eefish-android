<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/Layout_Login_username"
        android:layout_marginTop="120dp"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:id="@+id/edtText_Login_Username"
            android:inputType="text"
            />
    </android.support.design.widget.TextInputLayout>
    
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Layout_Login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Layout_Login_username"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtText_Login_password"
            android:hint="Password"
            android:inputType="textPassword"
            />
        
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Login_action"
        android:layout_marginTop="40dp"
        android:text="Sign In"
        android:layout_below="@+id/Layout_Login_password"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/btn_Login_RegisterLink"
        android:layout_below="@+id/btn_Login_action"
        />


</RelativeLayout>
