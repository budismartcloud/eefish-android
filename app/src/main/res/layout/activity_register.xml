<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#535353"
    >

    <!--ini kode form nama -->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/email_form"
        app:met_floatingLabelTextSize="15dp"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelText="Your Name"

        app:met_baseColor="#ffffff"
        app:met_primaryColor="#ffffff"
        app:met_errorColor="#ff0901"
        app:met_floatingLabelTextColor="#ffffff"


        android:textSize="15dp"
        android:ems="10"
        app:met_floatingLabel="highlight"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:id="@+id/username_form" />
    <!---->

    <!--ini kode form email-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        app:met_floatingLabelTextSize="15dp"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabelText="Your Email "
        android:textSize="15dp"
        app:met_helperText="email@example.com"
        app:met_helperTextAlwaysShown="true"
        app:met_bottomTextSize="15dp"

        app:met_baseColor="#ffffff"
        app:met_primaryColor="#ffffff"
        app:met_errorColor="#ff0901"
        app:met_floatingLabelTextColor="#ffffff"


        android:ems="10"
        app:met_floatingLabel="highlight"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:id="@+id/email_form"
        />
    <!---->

    <!--ini kode form nomoer telphone-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="15dp"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_below="@+id/username_form"
        android:layout_centerHorizontal="true"
        android:hint="+62 or 08"
        android:inputType="number"
        android:ems="10"

        app:met_baseColor="#ffffff"
        app:met_primaryColor="#ffffff"
        app:met_errorColor="#ff0901"
        app:met_floatingLabelTextColor="#ffffff"


        android:textSize="12dp"
        app:met_floatingLabelText="Your Phone Number"
        app:met_floatingLabelAlwaysShown="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="15sp"
        android:id="@+id/telpon_form"
        app:met_maxCharacters="12"
        />
    <!---->

    <!--ini form kode password-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        android:layout_below="@+id/telpon_form"
        android:layout_centerHorizontal="true"
        app:met_floatingLabelText="Password"
        android:layout_marginBottom="35dp"
        app:met_floatingLabelAlwaysShown="true"
        android:id="@+id/form_password"
        app:met_floatingLabelTextSize="15dp"
        app:met_helperText="min 6 Character"
        app:met_minCharacters="6"

        app:met_baseColor="#ffffff"
        app:met_primaryColor="#ffffff"
        app:met_errorColor="#ff0901"
        app:met_floatingLabelTextColor="#ffffff"
        />
    <!---->

    <!--ini button kotak register-->
    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="REGISTER"
        android:background="#00d698"
        android:layout_below="@+id/form_password"
        android:layout_centerHorizontal="true"
        android:id="@+id/registerButton"
        />
    <!---->
</RelativeLayout>
