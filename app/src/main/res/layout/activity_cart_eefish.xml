<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.eefish.Activity.CartActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_incart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        >
    </android.support.v7.widget.RecyclerView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingRight="0dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="75dp">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:minWidth="150dp"
                android:layout_width="180dp"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="TOTAL"
                    android:gravity="center|bottom|end"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvtotalorder"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Rp. 1.480.000,0"
                    android:gravity="center|center_horizontal|end"
                    android:paddingBottom="10dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Button

                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:background="@drawable/white_stroke_shape"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Lanjut Pembayaran"
                android:gravity="center|end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </Button>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
