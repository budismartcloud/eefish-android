<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/tab1"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/banner_satu" />
    <LinearLayout
        android:background="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/MediumGray"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/bAirLaut"
            android:padding="15dp"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:tooltipText="Air Laut"
            android:src="@drawable/kategori_air_laut"/>
        <TextView
            android:padding="5dp"
            android:background="@color/MediumGray"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Air Laut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/MediumGray"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/bAirTawar"
            android:padding="15dp"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:tooltipText="Air Laut"
            android:src="@drawable/kategori_air_laut"/>
        <TextView
            android:padding="5dp"
            android:background="@color/MediumGray"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Air Laut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/MediumGray"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/bUdang"
            android:padding="15dp"
            android:background="@color/lightGray"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:tooltipText="Air Laut"
            android:src="@drawable/kategori_udang"/>
        <TextView
            android:padding="5dp"
            android:background="@color/MediumGray"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:gravity="center"
            android:text="Air Laut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>