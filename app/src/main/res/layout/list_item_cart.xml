<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_gradate_shape_white"
        android:orientation="vertical"
        android:elevation="10dp"
        android:id="@+id/layout_cart"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_ikan_i"
                android:background="@drawable/fish_in_package_bg"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/colorPrimaryLight"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/fish_in_package_bg"/>
            <LinearLayout
                android:id="@+id/layout_cart_i"

                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:layout_toEndOf="@id/iv_ikan_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_toRightOf="@id/iv_ikan_i">
                <TextView
                    android:gravity="bottom"
                    android:id="@+id/tv_nama_ikan"
                    android:paddingTop="10dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:text="Bandeng Jumbo"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_jenis_pembelian"
                    android:paddingTop="5dp"
                    android:text="Beli per Kilo"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_harga_item_i"
                    android:paddingTop="5dp"
                    android:text="Rp 24.000,00"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/bMinusPerItem"
                        android:backgroundTint="@color/White"
                        android:textColor="@color/colorAccent"
                        android:textSize="30dp"
                        android:text="-"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:textSize="20dp"
                        android:text="2"
                        android:id="@+id/tvOrderItemperItem"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="55dp" />
                    <Button
                        android:id="@+id/bPlusPerItem"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@color/White"
                        android:textSize="30dp"
                        android:gravity="center"
                        android:text="+"
                        android:layout_gravity="center_vertical"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_subtotal_i"
            android:paddingRight="16dp"
            android:gravity="end"
            android:textColor="@color/White"
            android:text="Rp 48.000,00"
            android:textSize="16dp"
            android:textStyle="italic"
            android:background="@color/colorPrimary"
            android:layout_below="@id/layout_cart_i"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>
